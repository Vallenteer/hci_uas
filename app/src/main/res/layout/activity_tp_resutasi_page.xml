<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/illustrasi_jantung_banner"
        android:id="@+id/imageView" />
    <TextView
        android:id="@+id/testing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Resutasi jantung paru"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:textColor="#ffffff"
        android:gravity="bottom"
        android:layout_marginLeft="30dp" />

    <ListView
        android:id="@+id/listview_resultasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/testing">

    </ListView>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_audio"
        android:background="@drawable/audio_on"
        android:layout_alignBottom="@+id/testing"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:paddingRight="10dp"
        android:onClick="audio_on" />

</RelativeLayout>