<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="65dp"
    android:background="@drawable/img_pp_ss_3">

    <Button
        android:id="@+id/ss3Yes"
        android:layout_width="80dp"
        android:layout_height="105dp"
        android:layout_gravity="left"
        android:background="@drawable/ya_icon"
        android:onClick="pp_ss3Yes_open"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_alignTop="@+id/ss3No"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp" />
    <Button
        android:id="@+id/ss3No"
        android:layout_width="80dp"
        android:layout_height="105dp"
        android:layout_gravity="right"
        android:background="@drawable/tidak_icon"
        android:onClick="pp_ss3No_open"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>