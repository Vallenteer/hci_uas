<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="65dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/airwayText"
        android:layout_gravity="center|center_horizontal"
        android:paddingTop="30dp"
        android:text="AIRWAY"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textColor="#FFAB40"
        android:textStyle="bold"
        android:layout_alignRight="@+id/lanjutkan_airway4"
        android:layout_alignEnd="@+id/lanjutkan_airway4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:paddingTop="5dp"
        android:text="LANGKAH 1 / 4"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:id="@+id/textView9"
        android:layout_below="@+id/airwayText"
        android:layout_alignRight="@+id/airwayText"
        android:layout_alignEnd="@+id/airwayText"
        android:layout_alignLeft="@+id/airwayText"
        android:layout_alignStart="@+id/airwayText"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/airway1"
        android:text="Apabila penderita berada dalam kondisi tidak sadar,"
        android:textSize="18sp"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="lakukan"
        android:layout_below="@+id/airway1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView10" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/info_ADGD"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="angkat dagu tekan dahi"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/buttonInfoADGD"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/info_hijau"
            android:onClick="pop_1_open" />
    </LinearLayout>

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="untuk membuka jalur pernafasan"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Lanjutkan ke tahap selanjutnya"
        android:id="@+id/textView11"
        android:layout_above="@+id/lanjutkan_airway4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />
    <Button
        android:id="@+id/lanjutkan_airway4"
        android:layout_width="95dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom|center|center_horizontal"
        android:gravity="center"
        android:background="@drawable/lanjutkan_icon"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="pp_airway1Yes_open" />
</RelativeLayout>