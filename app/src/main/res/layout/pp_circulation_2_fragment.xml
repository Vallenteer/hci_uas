<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="65dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breathingText"
        android:layout_gravity="center|center_horizontal"
        android:paddingTop="30dp"
        android:text="CIRCULATION"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textColor="#FFAB40"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:paddingTop="5dp"
        android:text="LANGKAH 3 / 4"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:layout_below="@+id/breathingText"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:id="@+id/textView15" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="segera hubungi fasilitas kesehatan"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:id="@+id/textView12"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textColor="#ff0000"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal"
        android:text="Sambil menunggu bantuan,"
        android:id="@+id/textView13"
        android:layout_marginTop="129dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/info_Bantunafas"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="KONTROL PENDARAHAN"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/buttonInfoBantuNafas"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/info_hijau"/>
    </LinearLayout>

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal"
        android:text="untuk mencegah syok."
        android:id="@+id/textView14"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />


</RelativeLayout>