<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/vertical_divider"
        android:dividerPadding="5dip"
        android:showDividers="middle"
        android:onClick="angkat_dagu_page_open">
        <ImageView
            android:id="@+id/icon_ldr"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_angkatdahu"/>
        <TextView
            android:layout_width="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center|center_vertical|center_horizontal"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_ldr"
            android:text="Angkat dahu tekan dahi"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/vertical_divider"
        android:dividerPadding="5dip"
        android:showDividers="middle"
        android:layout_marginTop="60dp">
        <ImageView
            android:id="@+id/icon_dahu"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_angkatdahu"/>
        <TextView
            android:layout_width="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center|center_vertical|center_horizontal"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_dahu"
            android:text="Angkat dahu tekan dahi"
            android:textSize="18sp"/>
    </RelativeLayout>
</RelativeLayout>