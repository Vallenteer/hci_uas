<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="65dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/airwayText"
    android:layout_gravity="center|center_horizontal"
    android:paddingTop="30dp"
    android:text="AIRWAY"
    android:textSize="30sp"
    android:textAllCaps="true"
    android:textColor="#FFAB40"
    android:textStyle="bold"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|center_horizontal"
    android:paddingTop="5dp"
    android:text="LANGKAH 1 / 4"
    android:textSize="12sp"
    android:textAllCaps="true"
    android:layout_below="@+id/airwayText"
    android:layout_centerHorizontal="true"
    android:id="@+id/textView3" />

<TextView
    android:layout_width="193dp"
    android:layout_height="wrap_content"
    android:id="@+id/airway1text"
    android:text="Apakah penderita dapat berbicara lancar?"
    android:textSize="18sp"
    android:gravity="center_vertical|center|center_horizontal"
    android:layout_gravity="center"
    android:textColor="#000000"
    android:layout_marginTop="70dp"
    android:layout_below="@+id/textView3"
    android:layout_centerHorizontal="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom|center_horizontal"
    android:layout_marginBottom="70dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <Button
        android:id="@+id/airway1Yes"
        android:layout_width="80dp"
        android:layout_height="105dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/ya_icon"
        android:onClick="pp_airway1Yes_open" />
    <Button
        android:id="@+id/airway1No"
        android:layout_width="80dp"
        android:layout_height="105dp"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:background="@drawable/tidak_icon"
        android:onClick="pp_airway1No_open" />
</LinearLayout>
</RelativeLayout>